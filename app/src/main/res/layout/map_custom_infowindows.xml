<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="340dp"
    android:background="#00BCD4"
    >

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Nhiệt độ"
        android:textColor="#ff0f"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiaDiem"
        tools:text="Nhiệt độ" />

    <ImageView
        android:id="@+id/imageViewThoiTiet"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/textViewTemp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiaDiem"
        app:srcCompat="@drawable/day_clear" />

    <View
        android:id="@+id/view"
        android:layout_width="300dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemp"
        android:background="#2196F3"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Chi tiết"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#F11909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:text="Chi tiết" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:weightSum="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiệt độ:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ ẩm:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sức gió:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mây:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tầm nhìn:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mặt trời mọc:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mặt trời lặn:"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TextViewTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:id="@+id/TextViewNhietDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiệt độ"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:id="@+id/TextViewDoAm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ ẩm"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:id="@+id/TextViewSucGio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sức gió"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:id="@+id/TextViewMay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mây"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:id="@+id/TextViewTamNhin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tầm nhìn"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:id="@+id/TextViewMTMoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mặt trời mọc"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
            <TextView
                android:id="@+id/TextViewMTLan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mặt trời lặn"
                android:textSize="15sp"
                android:textColor="#0E0E69"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewDiaDiem"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Địa điểm"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>